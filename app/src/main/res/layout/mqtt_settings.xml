<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:background="#2D3A42">

    <FrameLayout android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="vertical" android:id="@+id/frameLayout" tools:ignore="MissingConstraints">


        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="#009849"
                    app:popupTheme="@style/AppTheme.PopupOverlay" app:titleTextColor="#FFFFFF"
                    app:titleTextAppearance="@style/TextAppearance.AppCompat.Large" app:title="MQTT"
                    app:titleMarginBottom="10dp" app:titleMarginStart="70dp"/>

        </LinearLayout>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:src="@drawable/back_draw"
                android:id="@+id/imageButton3"
                android:layout_marginTop="15dp"
                android:layout_marginStart="30dp" android:background="#009849"
                android:onClick="back"/>

    </FrameLayout>

    <TextView
            android:text="Connect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView1"
            android:textColor="#009849" android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@+id/frameLayout" android:layout_marginTop="10dp"/>
    <Switch
            android:text="Connection at startup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/switch1"
            android:textColor="#FFFFFF" android:textSize="36sp"
            app:layout_constraintTop_toBottomOf="@+id/textView1"
            android:layout_marginTop="20dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp" app:layout_goneMarginRight="50dp"
            android:switchPadding="5dp" tools:ignore="UseSwitchCompatOrMaterialXml"/>

    <TextView
            android:text="Address MQTT Broker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView2"
            android:textColor="#9E9B9B" android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp" app:layout_constraintTop_toBottomOf="@+id/textView3"/>
    <TextView
            android:text="Address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView3"
            android:textColor="#FFFFFF" android:textSize="36sp"
            android:onClick="openAddressSettings"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@+id/switch1" android:layout_marginTop="30dp"/>

    <TextView
            android:text="Subscribe topic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView4"
            android:textColor="#FFFFFF" android:textSize="36sp"
            android:onClick="subscribeTopic"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="20dp"
            android:layout_marginTop="30dp" app:layout_constraintTop_toBottomOf="@+id/textView2"/>
    <TextView
            android:text="Login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView5"
            android:textColor="#009849" android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@+id/textView4" android:layout_marginTop="20dp"/>
    <TextView
            android:text="Username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView6"
            android:textColor="#FFFFFF" android:textSize="36sp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="20dp"
            android:onClick="openUsernameSettings" app:layout_constraintTop_toBottomOf="@+id/textView5"
            android:layout_marginTop="20dp"/>
    <TextView
            android:text="Password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView7"
            android:textColor="#FFFFFF" android:textSize="36sp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="20dp"
            android:onClick="openPasswordSettings" app:layout_constraintTop_toBottomOf="@+id/textView6"
            android:layout_marginTop="20dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>