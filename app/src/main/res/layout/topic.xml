<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent" android:visibility="visible"
                                                   android:background="#2D3A42">

    <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="#FFFFFF"
            android:background="#009849"/>
    <TextView
            android:text="Setup topic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView1"
            android:textColor="#009849" android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@+id/title"/>
    <Switch
            android:text="Active"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/switch1"
            android:textColor="#FFFFFF" android:textSize="30sp"
            app:layout_constraintTop_toBottomOf="@+id/textView1"
            android:layout_marginTop="10dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp" app:layout_goneMarginRight="50dp"
            android:switchPadding="212dp" tools:ignore="UseSwitchCompatOrMaterialXml"/>
    <TextView
            android:text="Active topic?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView8"
            android:textColor="#9E9B9B" android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp" app:layout_constraintTop_toBottomOf="@+id/switch1"
    />
    <Switch
            android:text="Dashboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/switch2"
            android:textColor="#FFFFFF" android:textSize="30sp"
            app:layout_constraintTop_toBottomOf="@+id/textView8"
            android:layout_marginTop="10dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp" app:layout_goneMarginRight="50dp"
            android:switchPadding="150dp" tools:ignore="UseSwitchCompatOrMaterialXml"
            />
    <TextView
            android:text="Show this topic on dashboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView9"
            android:textColor="#9E9B9B" android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@+id/switch2"/>
    <TextView
            android:text="Topic name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView4"
            android:textColor="#FFFFFF" android:textSize="36sp"
            android:onClick="openAddressSettings"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@+id/textView9" android:layout_marginTop="10dp"
            />
    <TextView
            android:text="Enter alternate topic name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView5"
            android:textColor="#9E9B9B" android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@+id/textView4"/>
    <TextView
            android:text="Setup command"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView2"
            android:textColor="#009849" android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@+id/textView5" android:layout_marginTop="10dp"/>
    <TextView
            android:text="Select actions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView6"
            android:textColor="#FFFFFF" android:textSize="36sp"
            android:onClick="openAddressSettings"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" android:layout_marginTop="10dp"/>
    <TextView
            android:text="TTS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView3"
            android:textColor="#009849" android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="20dp"
            tools:layout_editor_absoluteY="348dp"
            app:layout_constraintTop_toBottomOf="@+id/textView6"
            android:layout_marginTop="10dp"/>
    <TextView
            android:text="Select actions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView7"
            android:textColor="#FFFFFF" android:textSize="36sp"
            android:onClick="openAddressSettings"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3" android:layout_marginTop="10dp"
            />


</androidx.constraintlayout.widget.ConstraintLayout>